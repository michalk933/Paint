<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/figuresFragment"
    android:layout_column="1"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin">

    <RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/figure_grup">
        <RadioButton
            android:text="@string/linie_drawing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linieRadioButton"
            android:layout_row="0"
            android:layout_column="0"
            android:checked="true"/>

        <RadioButton
            android:text="@string/kola_drawing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ringRadioButton"
            android:layout_row="1"
            android:layout_column="0"/>
        <RadioButton
            android:text="KoÅ‚o normalne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ringOneSizeRadioButton"
            android:layout_row="1"
            android:layout_column="0"/>

        <RadioButton
            android:text="@string/rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recRadioButton"
            android:layout_row="2"
            android:layout_column="0"/>





        <RadioButton
            android:text="@string/kolo_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ringPlusRadioButton"
            android:layout_row="1"
            android:layout_column="0"/>

        <RadioButton
            android:text="@string/kwadrat_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recPlusRadioButton"
            android:layout_row="2"
            android:layout_column="0"/>
        <RadioButton
            android:text="@string/sharp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sharpPlusRadioButton"
            android:layout_row="2"
            android:layout_column="0"/>




    </RadioGroup>

    <TextView
        android:text="o"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/showFigureTextView"
        android:layout_column="0"
        android:layout_row="3"
        android:gravity="center|top"/>


    <SeekBar
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/sizeTxtSeekBar"
        android:layout_column="0"
        android:layout_row="4"
        android:max="150"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="100px"/>

    <TextView
        android:text="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtShowTextView"
        android:layout_column="0"
        android:layout_row="5"/>

</GridLayout>